
#a and b are integers
#these codes is intented to sum all the contant integer between a and b

def get_sum(a, b):
    if a == b:
        return a or b

    elif a < b:
        for i in range(a,b):
            a = a + i + 1
        return a

    elif a > b:
        for i in range(b,a):
            b = b + i + 1
        return b

print get_sum(2,5)
print get_sum(5,2)
print get_sum(-3,-6)
print get_sum(-6,-3)
